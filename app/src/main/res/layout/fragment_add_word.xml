<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.fragments.AddWordFragment">

    <TextView
        android:id="@+id/addWord_dict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="4dp"
        android:layout_margin="10dp"
        android:textSize="18dp"
        android:hint="Словарь: "/>

    <EditText
        android:id="@+id/addWord_orig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/addWord_dict"
        app:layout_constraintStart_toStartOf="@id/addWord_dict"
        android:hint="Слово на русском языке"/>

    <TextView
        android:id="@+id/addWord_translate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/addWord_orig"
        app:layout_constraintStart_toStartOf="@id/addWord_orig"
        app:layout_constraintEnd_toEndOf="@id/addWord_orig"
        android:paddingStart="4dp"
        android:layout_marginTop="4dp"
        android:textSize="18dp"
        android:hint="Перевод"/>

    <TextView
        android:id="@+id/addWord_transcription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/addWord_translate"
        app:layout_constraintStart_toStartOf="@id/addWord_translate"
        android:paddingStart="4dp"
        android:layout_marginTop="4dp"
        android:textSize="18dp"
        android:hint="Транскрипция"/>

    <TextView
        android:id="@+id/addWord_alter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        android:text="Альтернативный перевод:"
        android:textSize="18dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/addWord_transcription"
        app:layout_constraintStart_toStartOf="@id/addWord_transcription"/>

    <TextView
        android:id="@+id/addWord_syn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        android:text="Синоним:"
        android:textSize="18dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/addWord_alter"
        app:layout_constraintStart_toStartOf="@id/addWord_alter"/>

    <ImageView
        android:id="@+id/addWord_translateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/addWord_orig"
        app:layout_constraintTop_toTopOf="@id/addWord_orig"
        app:layout_constraintBottom_toBottomOf="@id/addWord_orig"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_translate"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addWord_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/done_outline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>