<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.fragments.FindTrainFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        app:layout_constraintGuide_percent="0.4"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/findtrain_cl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/findtrain_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Задание"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/findtrain_transcription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="транскрипция"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/findtrain_question"
            app:layout_constraintStart_toStartOf="@id/findtrain_question"
            app:layout_constraintEnd_toEndOf="@id/findtrain_question"/>

        <ImageView
            android:id="@+id/findtrain_sound"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/baseline_volume_up"/>

        <ImageView
            android:id="@+id/findtrain_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/findtrain_sound"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_settings"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/answer1"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        android:layout_width="match_parent"
        android:background="@drawable/rectangle"
        android:layout_margin="6dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="Вариант ответа 1"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/answer2"
        app:layout_constraintTop_toBottomOf="@id/answer1"
        android:layout_width="match_parent"
        android:background="@drawable/rectangle"
        android:layout_margin="6dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="Вариант ответа 2"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/answer3"
        app:layout_constraintTop_toBottomOf="@id/answer2"
        android:layout_width="match_parent"
        android:background="@drawable/rectangle"
        android:layout_margin="6dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="Вариант ответа 3"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/answer4"
        app:layout_constraintTop_toBottomOf="@id/answer3"
        android:layout_width="match_parent"
        android:background="@drawable/rectangle"
        android:layout_margin="6dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="Вариант ответа 4"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>